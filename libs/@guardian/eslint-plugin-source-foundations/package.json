{
	"name": "@guardian/eslint-plugin-source-foundations",
	"version": "18.0.0",
	"description": "ESLint plugin for Guardian projects using the `@guardian/source-foundations` package.",
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache ."
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "6.21.0",
		"@typescript-eslint/parser": "6.21.0",
		"eslint-plugin-import": "2.29.1"
	},
	"devDependencies": {
		"@guardian/libs": "16.0.0",
		"@guardian/source-foundations": "0.0.0-canary-20240416115657",
		"@types/eslint": "8.56.1",
		"@types/estree": "1.0.5",
		"eslint": "8.56.0",
		"tslib": "2.6.2",
		"typescript": "5.3.3",
		"wireit": "0.14.4"
	},
	"peerDependencies": {
		"@guardian/libs": "^16.0.0",
		"@guardian/source-foundations": "^0.0.0-canary-20240410091047",
		"eslint": "^8.56.0",
		"tslib": "^2.6.2",
		"typescript": "~5.3.3"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"entry": "libs/@guardian/eslint-plugin-source-foundations/src/index.ts",
					"tsConfig": "libs/@guardian/eslint-plugin-source-foundations/tsconfig.json",
					"packageJson": "libs/@guardian/eslint-plugin-source-foundations/package.json",
					"outputPath": "dist/libs/@guardian/eslint-plugin-source-foundations",
					"assets": [
						"libs/@guardian/eslint-plugin-source-foundations/*.md"
					]
				}
			},
			"lint": {
				"inputs": [
					"{workspaceRoot}/libs/@guardian/eslint-plugin-source-foundations/**/*",
					"{workspaceRoot}/.eslintrc.js"
				]
			},
			"fix": {
				"inputs": [
					"{workspaceRoot}/libs/@guardian/eslint-plugin-source-foundations/**/*",
					"{workspaceRoot}/.eslintrc.js"
				],
				"outputs": [
					"{workspaceRoot}/libs/@guardian/eslint-plugin-source-foundations/"
				]
			},
			"test": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/eslint-plugin-source-foundations"
				],
				"options": {
					"jestConfig": "libs/@guardian/eslint-plugin-source-foundations/jest.config.ts",
					"passWithNoTests": true
				}
			},
			"verify-dist": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/eslint-plugin-source-foundations"
				],
				"options": {
					"jestConfig": "libs/@guardian/eslint-plugin-source-foundations/jest.config.ts",
					"passWithNoTests": false,
					"setupFilesAfterEnv": [
						"./jest.dist.setup.ts"
					]
				}
			},
			"dev": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/eslint-plugin-source-foundations"
				],
				"options": {
					"jestConfig": "libs/@guardian/eslint-plugin-source-foundations/jest.config.ts",
					"passWithNoTests": false,
					"watch": true
				}
			}
		}
	}
}
