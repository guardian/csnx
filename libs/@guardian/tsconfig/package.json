{
	"name": "@guardian/tsconfig",
	"version": "0.2.0",
	"description": "TSConfig base for Guardian TypeScript projects",
	"main": "tsconfig.json",
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache ."
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"outputPath": "dist/libs/@guardian/tsconfig",
					"assets": [
						"libs/@guardian/tsconfig/tsconfig.json",
						"libs/@guardian/tsconfig/*.md"
					],
					"packageJson": "libs/@guardian/tsconfig/package.json"
				}
			},
			"lint": {
				"inputs": [
					"{workspaceRoot}/libs/@guardian/tsconfig/**/*",
					"{workspaceRoot}/.eslintrc.js"
				]
			},
			"fix": {
				"inputs": [
					"{workspaceRoot}/libs/@guardian/tsconfig/**/*",
					"{workspaceRoot}/.eslintrc.js"
				],
				"outputs": [
					"{workspaceRoot}/libs/@guardian/tsconfig/"
				]
			},
			"verify-dist": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/tsconfig"
				],
				"options": {
					"jestConfig": "libs/@guardian/tsconfig/jest.config.js"
				}
			}
		}
	}
}
