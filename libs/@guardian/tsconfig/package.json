{
	"name": "@guardian/tsconfig",
	"version": "0.2.0",
	"description": "TSConfig base for Guardian TypeScript projects",
	"main": "tsconfig.json",
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache .",
		"verify-dist": "jest"
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"outputPath": "dist/libs/@guardian/tsconfig",
					"assets": [
						"libs/@guardian/tsconfig/tsconfig.json",
						"libs/@guardian/tsconfig/*.md"
					],
					"packageJson": "libs/@guardian/tsconfig/package.json"
				}
			},
			"lint": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				]
			},
			"fix": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				],
				"outputs": [
					"{projectRoot}"
				]
			},
			"verify-dist": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/jest.*"
				]
			}
		}
	}
}
