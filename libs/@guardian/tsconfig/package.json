{
	"name": "@guardian/tsconfig",
	"version": "0.3.0",
	"description": "TSConfig base for Guardian TypeScript projects",
	"main": "tsconfig.json",
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache .",
		"verify-dist": "jest"
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"outputPath": "{workspaceRoot}/dist/{projectRoot}",
					"assets": [
						"{projectRoot}/tsconfig.json",
						"{projectRoot}/*.md"
					],
					"packageJson": "{projectRoot}/package.json"
				}
			},
			"lint": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				]
			},
			"fix": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				],
				"outputs": [
					"{projectRoot}"
				]
			},
			"verify-dist": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/jest.*"
				]
			}
		}
	}
}
