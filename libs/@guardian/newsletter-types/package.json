{
	"name": "@guardian/newsletter-types",
	"version": "2.0.0",
	"private": false,
	"description": "A set of types describing the output of the Guardian newsletters API",
	"sideEffects": false,
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache ."
	},
	"devDependencies": {
		"tslib": "2.6.2",
		"typescript": "5.3.3"
	},
	"peerDependencies": {
		"tslib": "^2.6.2",
		"typescript": "~5.3.3"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"entry": "libs/@guardian/newsletter-types/src/index.ts",
					"tsConfig": "libs/@guardian/newsletter-types/tsconfig.json",
					"packageJson": "libs/@guardian/newsletter-types/package.json",
					"outputPath": "dist/libs/@guardian/newsletter-types",
					"assets": [
						"libs/@guardian/newsletter-types/*.md"
					]
				}
			},
			"lint": {
				"inputs": [
					"{workspaceRoot}/libs/@guardian/newsletter-types/**/*",
					"{workspaceRoot}/.eslintrc.js"
				]
			},
			"fix": {
				"inputs": [
					"{workspaceRoot}/libs/@guardian/newsletter-types/**/*",
					"{workspaceRoot}/.eslintrc.js"
				],
				"outputs": [
					"{workspaceRoot}/libs/@guardian/newsletter-types/"
				]
			},
			"test": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/newsletter-types"
				],
				"options": {
					"jestConfig": "libs/@guardian/newsletter-types/jest.config.ts",
					"passWithNoTests": true
				}
			},
			"dev": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/newsletter-types"
				],
				"options": {
					"jestConfig": "libs/@guardian/newsletter-types/jest.config.ts",
					"passWithNoTests": false,
					"watch": true
				}
			}
		}
	}
}
