{
	"name": "@guardian/source-react-components",
	"version": "22.1.0",
	"license": "Apache-2.0",
	"sideEffects": false,
	"scripts": {
		"build-storybook": "wireit",
		"create-icons": "ts-node scripts/create-icons",
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache .",
		"storybook": "storybook dev --port 4402"
	},
	"devDependencies": {
		"@babel/core": "7.24.0",
		"@emotion/react": "11.11.1",
		"@guardian/source-foundations": "14.1.4",
		"@svgr/babel-preset": "8.1.0",
		"@svgr/core": "8.1.0",
		"@svgr/plugin-jsx": "8.1.0",
		"@svgr/plugin-prettier": "8.1.0",
		"@svgr/plugin-svgo": "8.1.0",
		"@types/mkdirp": "2.0.0",
		"@types/prettier": "3.0.0",
		"@types/react": "18.2.11",
		"dotenv": "16.4.1",
		"mkdirp": "3.0.1",
		"prettier": "3.2.2",
		"react": "18.2.0",
		"ts-node": "10.9.2",
		"tslib": "2.6.2",
		"typescript": "5.3.3",
		"wireit": "0.14.4"
	},
	"peerDependencies": {
		"@emotion/react": "^11.11.1",
		"@guardian/source-foundations": "^14.1.4",
		"react": "^18.2.0",
		"tslib": "^2.6.2",
		"typescript": "~5.3.3"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"entry": "libs/@guardian/source-react-components/src/index.ts",
					"tsConfig": "libs/@guardian/source-react-components/tsconfig.json",
					"packageJson": "libs/@guardian/source-react-components/package.json",
					"outputPath": "dist/libs/@guardian/source-react-components",
					"assets": [
						"libs/@guardian/source-react-components/*.md"
					]
				}
			},
			"lint": {
				"inputs": [
					"{workspaceRoot}/libs/@guardian/source-foundations/**/*",
					"{workspaceRoot}/.eslintrc.js"
				]
			},
			"fix": {
				"inputs": [
					"{workspaceRoot}/libs/@guardian/source-foundations/**/*",
					"{workspaceRoot}/.eslintrc.js"
				],
				"outputs": [
					"{workspaceRoot}/libs/@guardian/source-foundations/"
				]
			},
			"test": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/source-react-components"
				],
				"options": {
					"jestConfig": "libs/@guardian/source-react-components/jest.config.ts",
					"passWithNoTests": true
				}
			},
			"verify-dist": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/source-react-components"
				],
				"options": {
					"jestConfig": "libs/@guardian/source-react-components/jest.config.ts",
					"passWithNoTests": false,
					"setupFilesAfterEnv": [
						"./jest.dist.setup.ts"
					]
				}
			},
			"dev": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/source-react-components"
				],
				"options": {
					"jestConfig": "libs/@guardian/source-react-components/jest.config.ts",
					"passWithNoTests": false,
					"watch": true
				}
			}
		}
	},
	"wireit": {
		"build-storybook": {
			"command": "NODE_ENV=production storybook build --webpack-stats-json",
			"files": [
				"**/*.{ts,tsx,js,json,mdx,md}",
				"!storybook-static/**",
				"!jest*"
			],
			"output": [
				"storybook-static"
			]
		}
	}
}
