{
	"name": "@guardian/eslint-config-typescript",
	"version": "9.0.4",
	"description": "ESLint config for Guardian TypeScript projects",
	"main": "index.js",
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache ."
	},
	"dependencies": {
		"@guardian/eslint-config": "workspace:*",
		"@typescript-eslint/eslint-plugin": "7.7.0",
		"@typescript-eslint/parser": "7.7.0",
		"eslint-import-resolver-typescript": "3.6.1",
		"eslint-plugin-import": "2.29.1"
	},
	"devDependencies": {
		"eslint": "9.0.0",
		"tslib": "2.6.2",
		"typescript": "5.3.3"
	},
	"peerDependencies": {
		"eslint": "^8.56.0",
		"tslib": "^2.6.2",
		"typescript": "~5.3.3"
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"outputPath": "dist/libs/@guardian/eslint-config-typescript",
					"packageJson": "libs/@guardian/eslint-config-typescript/package.json",
					"assets": [
						"libs/@guardian/eslint-config-typescript/index.js",
						"libs/@guardian/eslint-config-typescript/*.md"
					]
				}
			},
			"lint": {
				"inputs": [
					"{workspaceRoot}/libs/@guardian/eslint-config-typescript/**/*",
					"{workspaceRoot}/.eslintrc.js"
				]
			},
			"fix": {
				"inputs": [
					"{workspaceRoot}/libs/@guardian/eslint-config-typescript/**/*",
					"{workspaceRoot}/.eslintrc.js"
				],
				"outputs": [
					"{workspaceRoot}/libs/@guardian/eslint-config-typescript/"
				]
			},
			"verify-dist": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/eslint-config-typescript"
				],
				"options": {
					"jestConfig": "libs/@guardian/eslint-config-typescript/jest.config.js"
				}
			}
		}
	}
}
