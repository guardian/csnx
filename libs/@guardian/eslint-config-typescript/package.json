{
	"name": "@guardian/eslint-config-typescript",
	"version": "10.0.0",
	"description": "ESLint config for Guardian TypeScript projects",
	"main": "index.js",
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache .",
		"verify-dist": "jest"
	},
	"dependencies": {
		"@guardian/eslint-config": "workspace:*",
		"@typescript-eslint/eslint-plugin": "7.8.0",
		"@typescript-eslint/parser": "7.8.0",
		"eslint-import-resolver-typescript": "3.6.1",
		"eslint-plugin-import": "2.29.1"
	},
	"devDependencies": {
		"eslint": "9.1.1",
		"tslib": "2.6.2",
		"typescript": "5.3.3"
	},
	"peerDependencies": {
		"eslint": "^8.56.0",
		"tslib": "^2.6.2",
		"typescript": "~5.3.3"
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"outputPath": "{workspaceRoot}/dist/{projectRoot}",
					"packageJson": "{projectRoot}/package.json",
					"assets": [
						"{projectRoot}/index.js",
						"{projectRoot}/*.md"
					]
				}
			},
			"lint": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				]
			},
			"fix": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				],
				"outputs": [
					"{projectRoot}"
				]
			},
			"verify-dist": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/jest.*"
				]
			}
		}
	}
}
