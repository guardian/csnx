{
	"name": "@guardian/eslint-config-typescript",
	"version": "10.0.0",
	"description": "ESLint config for Guardian TypeScript projects",
	"main": "index.js",
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache ."
	},
	"dependencies": {
		"@guardian/eslint-config": "workspace:*",
		"@typescript-eslint/eslint-plugin": "7.3.1",
		"@typescript-eslint/parser": "7.3.1",
		"eslint-import-resolver-typescript": "3.6.1",
		"eslint-plugin-import": "2.29.1"
	},
	"devDependencies": {
		"eslint": "8.56.0",
		"tslib": "2.6.2",
		"typescript": "5.3.3"
	},
	"peerDependencies": {
		"eslint": "^8.56.0",
		"tslib": "^2.6.2",
		"typescript": "~5.3.3"
	},
	"nx": {
		"targets": {
			"lint": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				]
			},
			"fix": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				],
				"outputs": [
					"{projectRoot}"
				]
			}
		}
	}
}
