{
	"name": "@guardian/prettier",
	"version": "8.0.0",
	"description": "Prettier config for Guardian JavaScript & TypeScript projects",
	"main": "index.js",
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache ."
	},
	"devDependencies": {
		"prettier": "3.2.2",
		"tslib": "2.6.2"
	},
	"peerDependencies": {
		"prettier": "^3.2.2",
		"tslib": "^2.6.2"
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"packageJson": "libs/@guardian/prettier/package.json",
					"outputPath": "dist/libs/@guardian/prettier",
					"assets": [
						"libs/@guardian/prettier/index.js",
						"libs/@guardian/prettier/index.d.ts",
						"libs/@guardian/prettier/*.md"
					]
				}
			},
			"lint": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				]
			},
			"fix": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				],
				"outputs": [
					"{projectRoot}"
				]
			},
			"verify-dist": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/prettier"
				],
				"options": {
					"jestConfig": "libs/@guardian/prettier/jest.config.js"
				}
			}
		}
	}
}
