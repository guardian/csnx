{
	"name": "@guardian/prettier",
	"version": "8.0.0",
	"description": "Prettier config for Guardian JavaScript & TypeScript projects",
	"main": "index.js",
	"files": [
		"index.d.ts"
	],
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache ."
	},
	"devDependencies": {
		"prettier": "3.2.2",
		"tslib": "2.6.2"
	},
	"peerDependencies": {
		"prettier": "^3.2.2",
		"tslib": "^2.6.2"
	},
	"nx": {
		"targets": {
			"lint": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				]
			},
			"fix": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				],
				"outputs": [
					"{projectRoot}"
				]
			}
		}
	}
}
