{
	"name": "@guardian/cobalt-plugin-ts",
	"version": "0.1.1",
	"private": true,
	"type": "module",
	"main": "./index.js",
	"scripts": {
		"fix": "wireit",
		"lint": "wireit"
	},
	"devDependencies": {
		"@cobalt-ui/cli": "^1.11.0",
		"@cobalt-ui/core": "^1.11.0",
		"@cobalt-ui/plugin-css": "^1.7.0",
		"@cobalt-ui/plugin-js": "^1.4.3",
		"@cobalt-ui/utils": "^1.2.2",
		"tslib": "2.6.2",
		"typescript": "5.4.5",
		"wireit": "0.14.4"
	},
	"peerDependencies": {
		"tslib": "^2.6.2"
	},
	"wireit": {
		"fix": {
			"command": "eslint --cache --color . --fix",
			"clean": false,
			"files": [
				"**",
				"../../../.eslint*"
			],
			"output": [
				"."
			]
		},
		"lint": {
			"command": "eslint --cache --color .",
			"files": [
				"**",
				"../../../.eslint*"
			],
			"output": []
		}
	}
}
