{
	"name": "@guardian/ab-react",
	"version": "8.0.0",
	"private": false,
	"description": "A React library for A/B & multivariate testing",
	"license": "Apache-2.0",
	"sideEffects": false,
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache ."
	},
	"devDependencies": {
		"@emotion/react": "11.11.1",
		"@guardian/ab-core": "7.0.0",
		"@testing-library/react": "14.2.1",
		"@types/react": "18.2.11",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"tslib": "2.6.2",
		"typescript": "5.3.3"
	},
	"peerDependencies": {
		"@guardian/ab-core": "^7.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tslib": "^2.6.2",
		"typescript": "~5.3.3"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"entry": "libs/@guardian/ab-react/src/index.ts",
					"tsConfig": "libs/@guardian/ab-react/tsconfig.json",
					"packageJson": "libs/@guardian/ab-react/package.json",
					"outputPath": "dist/libs/@guardian/ab-react",
					"assets": [
						"libs/@guardian/ab-react/*.md"
					]
				}
			},
			"lint": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				]
			},
			"fix": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				],
				"outputs": [
					"{projectRoot}"
				]
			},
			"test": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/ab-react"
				],
				"options": {
					"jestConfig": "libs/@guardian/ab-react/jest.config.ts",
					"passWithNoTests": true
				}
			},
			"verify-dist": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/ab-react"
				],
				"options": {
					"jestConfig": "libs/@guardian/ab-react/jest.config.ts",
					"passWithNoTests": false,
					"setupFilesAfterEnv": [
						"./jest.dist.setup.js"
					]
				}
			},
			"dev": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/ab-react"
				],
				"options": {
					"jestConfig": "libs/@guardian/ab-react/jest.config.ts",
					"passWithNoTests": false,
					"watch": true
				}
			}
		}
	}
}
