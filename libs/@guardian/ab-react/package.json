{
	"name": "@guardian/ab-react",
	"version": "10.0.0",
	"private": false,
	"description": "A React library for A/B & multivariate testing",
	"repository": {
		"url": "https://github.com/guardian/csnx",
		"directory": "libs/@guardian/ab-react"
	},
	"license": "Apache-2.0",
	"sideEffects": false,
	"type": "module",
	"exports": {
		"types": "./dist/index.d.ts",
		"import": "./dist/index.js",
		"require": "./dist/index.cjs"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "wireit",
		"dev": "jest --watch",
		"fix": "wireit",
		"lint": "wireit",
		"test": "wireit",
		"tsc": "wireit",
		"verify-dist": "wireit"
	},
	"devDependencies": {
		"@guardian/ab-core": "9.0.0",
		"@guardian/eslint-config": "workspace:*",
		"@testing-library/react": "16.3.0",
		"@types/jest": "30.0.0",
		"@types/react": "19.2.7",
		"@types/react-dom": "18.2.25",
		"eslint": "9.39.1",
		"jest": "30.2.0",
		"jest-environment-jsdom": "30.2.0",
		"react": "19.2.1",
		"react-dom": "18.2.0",
		"rollup": "4.53.3",
		"ts-jest": "29.4.0",
		"tslib": "2.8.1",
		"typescript": "5.9.3",
		"wireit": "0.14.12"
	},
	"peerDependencies": {
		"@guardian/ab-core": "^9.0.0",
		"@types/react": "^18.2.79",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tslib": "^2.8.1",
		"typescript": "~5.9.3"
	},
	"peerDependenciesMeta": {
		"@types/react": {
			"optional": true
		},
		"typescript": {
			"optional": true
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"wireit": {
		"__deps__": {
			"dependencies": [
				"../ab-core:build"
			]
		},
		"build": {
			"command": "rollup -c",
			"dependencies": [
				"__deps__"
			],
			"files": [
				"src/**",
				"package.json",
				"tsconfig.json",
				"rollup.config.js",
				"../../../configs/rollup/rollup.config.js"
			],
			"output": [
				"dist"
			]
		},
		"fix": {
			"command": "eslint --cache --color . --fix",
			"dependencies": [
				"__deps__"
			],
			"files": [
				"**",
				"!(dist)/**",
				"!.eslintcache"
			],
			"clean": false,
			"output": [
				"."
			]
		},
		"lint": {
			"command": "eslint --cache --color .",
			"dependencies": [
				"__deps__"
			],
			"files": [
				"**",
				"!(dist)/**",
				"!.eslintcache"
			],
			"output": []
		},
		"test": {
			"command": "jest",
			"dependencies": [
				"__deps__"
			],
			"files": [
				"**",
				"../../../configs/jest.*",
				"!(dist)/**",
				"!.eslintcache"
			],
			"output": []
		},
		"tsc": {
			"command": "tsc --pretty",
			"dependencies": [
				"__deps__"
			],
			"files": [
				"**",
				"tsconfig.json",
				"../tsconfig/tsconfig.json",
				"../../../@types/**",
				"../../../tsconfig.base.json",
				"!(dist)/**",
				"!.eslintcache"
			],
			"output": []
		},
		"verify-dist": {
			"command": "jest --setupFilesAfterEnv ./jest.dist.setup.js",
			"dependencies": [
				"build"
			],
			"files": [
				"**",
				"../../../configs/jest.*",
				"!(dist)/**",
				"!.eslintcache"
			],
			"output": []
		}
	}
}
