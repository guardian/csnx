{
	"name": "@guardian/design-tokens",
	"version": "0.1.0--pre.0",
	"private": true,
	"type": "module",
	"main": "./tokens.js",
	"scripts": {
		"fix": "pnpm lint --fix",
		"generate-tokens": "co build && prettier --write tokens.d.ts tokens.js variables.css",
		"lint": "eslint --cache ."
	},
	"devDependencies": {
		"@cobalt-ui/cli": "1.11.0",
		"@cobalt-ui/core": "1.11.0",
		"@cobalt-ui/plugin-css": "1.7.0",
		"@guardian/cobalt-plugin-ts": "workspace:*"
	},
	"peerDependencies": {
		"tslib": "^2.5.3"
	},
	"nx": {
		"targets": {
			"generate-tokens": {
				"inputs": [
					"{projectRoot}/!(tokens|node_modules)/*",
					"!{projectRoot}/**/*.md"
				],
				"outputs": [
					"{projectRoot}/tokens.js",
					"{projectRoot}/tokens.d.ts",
					"{projectRoot}/variables.css"
				]
			},
			"build": {
				"dependsOn": [
					"generate-tokens"
				],
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"packageJson": "{projectRoot}/package.json",
					"outputPath": "{workspaceRoot}/dist/{projectRoot}",
					"assets": [
						"{projectRoot}/*.md",
						"{projectRoot}/tokens.js",
						"{projectRoot}/tokens.d.ts",
						"{projectRoot}/variables.css"
					]
				}
			},
			"lint": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				]
			},
			"fix": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				],
				"outputs": [
					"{projectRoot}"
				]
			}
		}
	}
}
