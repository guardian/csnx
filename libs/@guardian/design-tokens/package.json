{
	"name": "@guardian/design-tokens",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"main": "__generated__/tokens.js",
	"types": "__generated__/tokens.d.ts",
	"files": [
		"__generated__"
	],
	"scripts": {
		"build": "wireit",
		"fix": "wireit",
		"lint": "wireit",
		"tsc": "wireit"
	},
	"devDependencies": {
		"@cobalt-ui/cli": "1.11.0",
		"@cobalt-ui/core": "1.11.0",
		"@cobalt-ui/plugin-css": "1.7.0",
		"@guardian/cobalt-plugin-ts": "workspace:*",
		"typescript": "5.4.5",
		"wireit": "0.14.4"
	},
	"peerDependencies": {
		"tslib": "^2.5.3"
	},
	"wireit": {
		"build": {
			"command": "co build && prettier --write __generated__/**",
			"files": [
				"src/**",
				"tokens.config.js",
				"package.json"
			],
			"output": [
				"__generated__"
			]
		},
		"fix": {
			"command": "eslint --cache --color . --fix",
			"files": [
				"**",
				"../../../.eslint*",
				"!(dist)/**",
				"!.eslintcache"
			],
			"clean": false,
			"output": [
				"."
			]
		},
		"lint": {
			"command": "eslint --cache --color .",
			"files": [
				"**",
				"../../../.eslint*",
				"!(dist)/**",
				"!.eslintcache"
			],
			"output": []
		},
		"tsc": {
			"command": "tsc --pretty",
			"files": [
				"**",
				"tsconfig.json",
				"../tsconfig/tsconfig.json",
				"../../../@types/**",
				"../../../tsconfig.base.json",
				"!(dist)/**",
				"!.eslintcache"
			],
			"output": []
		}
	}
}
