{
	"name": "@guardian/design-tokens",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"main": "__generated__/tokens.js",
	"types": "__generated__/tokens.d.ts",
	"files": [
		"__generated__"
	],
	"scripts": {
		"build": "wireit",
		"fix": "wireit",
		"lint": "wireit"
	},
	"devDependencies": {
		"@cobalt-ui/cli": "1.11.0",
		"@cobalt-ui/core": "1.11.0",
		"@cobalt-ui/plugin-css": "1.7.0",
		"@guardian/cobalt-plugin-ts": "workspace:*",
		"wireit": "0.14.4"
	},
	"peerDependencies": {
		"tslib": "^2.5.3"
	},
	"wireit": {
		"build": {
			"command": "co build && prettier --write __generated__/**",
			"files": [
				"./tokens.config.js",
				"./tokens.json",
				"./package.json"
			],
			"output": [
				"./__generated__"
			]
		},
		"fix": {
			"command": "eslint --cache --color . --fix",
			"clean": false,
			"files": [
				"!(dist)/**",
				"!(.eslintcache)",
				"../../../.eslint*"
			],
			"output": [
				"."
			]
		},
		"lint": {
			"command": "eslint --cache --color .",
			"files": [
				"!(dist)/**",
				"!(.eslintcache)",
				"../../../.eslint*"
			],
			"output": []
		}
	}
}
