{
	"name": "@guardian/design-tokens",
	"version": "0.1.0--pre.0",
	"private": true,
	"type": "module",
	"main": "src/__generated__/tokens.js",
	"types": "src/__generated__/tokens.d.ts",
	"files": [
		"src/__generated__"
	],
	"scripts": {
		"build": "co build && prettier --write src/__generated__/**",
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache ."
	},
	"devDependencies": {
		"@cobalt-ui/cli": "1.11.0",
		"@cobalt-ui/core": "1.11.0",
		"@cobalt-ui/plugin-css": "1.7.0",
		"@guardian/cobalt-plugin-ts": "workspace:*"
	},
	"peerDependencies": {
		"tslib": "^2.5.3"
	},
	"nx": {
		"targets": {
			"build": {
				"inputs": [
					"{projectRoot}/tokens.config.js",
					"{projectRoot}/package.json"
				],
				"outputs": [
					"{projectRoot}/src/__generated__"
				]
			},
			"lint": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				]
			},
			"fix": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				],
				"outputs": [
					"{projectRoot}"
				]
			}
		}
	}
}
