{
	"name": "@guardian/eslint-config",
	"version": "8.0.1",
	"description": "ESLint config for Guardian JavaScript projects",
	"main": "index.js",
	"scripts": {
		"fix": "wireit",
		"lint": "wireit"
	},
	"dependencies": {
		"eslint-config-prettier": "*",
		"eslint-plugin-eslint-comments": "*",
		"eslint-plugin-import": "*"
	},
	"devDependencies": {
		"eslint": "8.56.0",
		"tslib": "^2.6.2",
		"wireit": "0.14.4"
	},
	"peerDependencies": {
		"eslint": "^8.56.0",
		"tslib": "^2.6.2"
	},
	"wireit": {
		"lint": {
			"command": "eslint --cache --color .",
			"files": [
				"**",
				"../../../.eslint*"
			],
			"output": []
		},
		"fix": {
			"command": "eslint --cache --color . --fix",
			"clean": false,
			"files": [
				"**",
				"../../../.eslint*"
			],
			"output": [
				"."
			]
		}
	}
}
