{
	"name": "@guardian/eslint-config",
	"version": "8.0.1",
	"description": "ESLint config for Guardian JavaScript projects",
	"type": "module",
	"main": "index.js",
	"scripts": {
		"fix": "wireit",
		"lint": "wireit",
		"tsc": "wireit"
	},
	"dependencies": {
		"@eslint/compat": "1.1.0",
		"@eslint/eslintrc": "3.1.0",
		"@eslint/js": "9.6.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-eslint-comments": "3.2.0",
		"eslint-plugin-import-x": "3.0.0",
		"globals": "15.8.0",
		"typescript-eslint": "^7.16.0"
	},
	"devDependencies": {
		"eslint": "9.6.0",
		"tslib": "2.6.2",
		"wireit": "0.14.4"
	},
	"peerDependencies": {
		"eslint": "^9.6.0",
		"tslib": "^2.6.2"
	},
	"wireit": {
		"lint": {
			"command": "eslint --cache --color .",
			"files": [
				"**",
				"../../../.eslint*",
				"!.eslintcache"
			],
			"output": []
		},
		"fix": {
			"command": "eslint --cache --color . --fix",
			"clean": false,
			"files": [
				"**",
				"../../../.eslint*",
				"!.eslintcache"
			],
			"output": [
				"."
			]
		},
		"tsc": {
			"command": "tsc --pretty",
			"files": [
				"**",
				"tsconfig.json",
				"../tsconfig/tsconfig.json",
				"../../../@types/**",
				"../../../tsconfig.base.json",
				"!(dist)/**",
				"!.eslintcache"
			],
			"output": []
		}
	}
}
