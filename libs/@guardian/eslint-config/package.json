{
	"name": "@guardian/eslint-config",
	"version": "8.0.0",
	"description": "ESLint config for Guardian JavaScript projects",
	"main": "index.js",
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache ."
	},
	"dependencies": {
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-eslint-comments": "3.2.0",
		"eslint-plugin-import": "2.29.1"
	},
	"devDependencies": {
		"eslint": "8.56.0",
		"tslib": "^2.6.2"
	},
	"peerDependencies": {
		"eslint": "^8.56.0",
		"tslib": "^2.6.2"
	},
	"nx": {
		"targets": {
			"lint": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				]
			},
			"fix": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				],
				"outputs": [
					"{projectRoot}"
				]
			}
		}
	}
}
