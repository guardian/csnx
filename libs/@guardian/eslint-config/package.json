{
	"name": "@guardian/eslint-config",
	"version": "7.0.1",
	"description": "ESLint config for Guardian JavaScript projects",
	"main": "index.js",
	"dependencies": {
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-eslint-comments": "3.2.0",
		"eslint-plugin-import": "2.29.1"
	},
	"devDependencies": {
		"eslint": "9.0.0",
		"tslib": "^2.6.2"
	},
	"peerDependencies": {
		"eslint": "^8.56.0",
		"tslib": "^2.6.2"
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"outputPath": "dist/libs/@guardian/eslint-config",
					"packageJson": "libs/@guardian/eslint-config/package.json",
					"assets": [
						"libs/@guardian/eslint-config/index.js",
						"libs/@guardian/eslint-config/*.md"
					]
				}
			},
			"verify-dist": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/eslint-config"
				],
				"options": {
					"jestConfig": "libs/@guardian/eslint-config/jest.config.js"
				}
			}
		}
	}
}
