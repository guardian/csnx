{
	"name": "@guardian/browserslist-config",
	"version": "6.1.0",
	"description": "Browserslist config for Guardian websites",
	"main": "browserslist.js",
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache .",
		"update-readme": "node ./scripts/update-readme.mjs",
		"verify-dist": "jest"
	},
	"devDependencies": {
		"@guardian/browserslist-config": "workspace:*",
		"browserslist": "4.23.0",
		"tslib": "2.6.2"
	},
	"peerDependencies": {
		"browserslist": "^4.22.2",
		"tslib": "^2.6.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"outputPath": "{workspaceRoot}/dist/{projectRoot}",
					"packageJson": "{projectRoot}/package.json",
					"assets": [
						"{projectRoot}/.browserslistrc",
						"{projectRoot}/browserslist-stats.json",
						"{projectRoot}/browserslist.js",
						"{projectRoot}/*.md"
					]
				}
			},
			"lint": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				]
			},
			"fix": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				],
				"outputs": [
					"{projectRoot}"
				]
			},
			"verify-dist": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/jest.*"
				]
			}
		}
	}
}
