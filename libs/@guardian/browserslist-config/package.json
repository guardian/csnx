{
	"name": "@guardian/browserslist-config",
	"version": "6.1.1",
	"description": "Browserslist config for Guardian websites",
	"main": "browserslist.js",
	"files": [
		".browserslistrc",
		"browserslist-stats.json"
	],
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache .",
		"update-readme": "node ./scripts/update-readme.mjs"
	},
	"devDependencies": {
		"@guardian/browserslist-config": "workspace:*",
		"browserslist": "4.23.0",
		"tslib": "2.6.2"
	},
	"peerDependencies": {
		"browserslist": "^4.22.2",
		"tslib": "^2.6.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"nx": {
		"targets": {
			"lint": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				]
			},
			"fix": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				],
				"outputs": [
					"{projectRoot}"
				]
			}
		}
	}
}
