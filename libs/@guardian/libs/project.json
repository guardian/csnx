{
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/@guardian/libs/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@csnx/npm-package:compile",
			"outputs": ["{options.outputPath}"],
			"options": {
				"entryFile": "libs/@guardian/libs/src/index.ts",
				"tsConfig": "libs/@guardian/libs/tsconfig.lib.json",
				"project": "libs/@guardian/libs/package.json",
				"outputPath": "dist/libs/@guardian/libs",
				"assets": [
					{
						"glob": "*.md",
						"input": "libs/@guardian/libs",
						"output": "/"
					}
				]
			}
		},
		"lint": {
			"executor": "@csnx/eslint:check",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["libs/@guardian/libs/**/*.ts"]
			}
		},
		"fix": {
			"executor": "@csnx/eslint:fix",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["libs/@guardian/libs/**/*.ts"]
			}
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": ["coverage/libs/@guardian/libs"],
			"options": {
				"jestConfig": "libs/@guardian/libs/jest.config.ts",
				"passWithNoTests": true
			}
		},
		"e2e": {
			"executor": "@nrwl/jest:jest",
			"outputs": ["coverage/libs/@guardian/libs"],
			"options": {
				"jestConfig": "libs/@guardian/libs/jest.config.ts",
				"passWithNoTests": true,
				"setupFilesAfterEnv": ["./jest.e2e.setup.js"]
			}
		}
	},
	"tags": []
}
