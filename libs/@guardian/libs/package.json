{
	"name": "@guardian/libs",
	"version": "16.1.0",
	"private": false,
	"description": "A collection of JavaScript libraries and TypeScript types for Guardian projects",
	"sideEffects": false,
	"scripts": {
		"e2e": "wireit",
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache .",
		"test": "jest",
		"verify-dist": "jest --setupFilesAfterEnv ./jest.dist.setup.ts"
	},
	"devDependencies": {
		"@types/wcag-contrast": "3.0.3",
		"cypress": "13.7.1",
		"cypress-wait-until": "3.0.1",
		"eslint-plugin-cypress": "2.15.1",
		"jest-fetch-mock": "3.0.3",
		"mockdate": "3.0.5",
		"tslib": "2.6.2",
		"typescript": "5.3.3",
		"wcag-contrast": "3.0.0",
		"wireit": "0.14.4"
	},
	"peerDependencies": {
		"tslib": "^2.6.2",
		"typescript": "~5.3.3"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"entry": "libs/@guardian/libs/src/index.ts",
					"tsConfig": "libs/@guardian/libs/tsconfig.json",
					"packageJson": "libs/@guardian/libs/package.json",
					"outputPath": "dist/libs/@guardian/libs",
					"assets": [
						"libs/@guardian/libs/*.md"
					]
				}
			},
			"lint": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				]
			},
			"fix": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				],
				"outputs": [
					"{projectRoot}"
				]
			},
			"test": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/jest.*"
				]
			},
			"verify-dist": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/jest.*"
				]
			},
			"dev": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/libs"
				],
				"options": {
					"jestConfig": "libs/@guardian/libs/jest.config.ts",
					"passWithNoTests": false,
					"watch": true
				}
			}
		}
	},
	"wireit": {
		"e2e": {
			"command": "cypress run --headless",
			"files": [
				"**",
				"!(jest*)"
			],
			"output": [],
			"dependencies": [
				"../../../apps/github-pages:start"
			]
		}
	}
}
