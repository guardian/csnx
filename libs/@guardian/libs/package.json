{
	"name": "@guardian/libs",
	"version": "19.1.0",
	"private": false,
	"description": "A collection of JavaScript libraries and TypeScript types for Guardian projects",
	"sideEffects": false,
	"type": "module",
	"exports": {
		"types": "./dist/index.d.ts",
		"import": "./dist/index.js",
		"require": "./dist/index.cjs"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "wireit",
		"dev": "jest --watch",
		"e2e": "wireit",
		"e2e:ui": "wireit",
		"fix": "wireit",
		"lint": "wireit",
		"sourcepoint-integration-test": "wireit",
		"test": "wireit",
		"tsc": "wireit",
		"verify-dist": "wireit"
	},
	"devDependencies": {
		"@guardian/eslint-config": "workspace:*",
		"@playwright/test": "1.48.0",
		"@types/jest": "29.5.8",
		"@types/wcag-contrast": "3.0.3",
		"eslint": "9.9.0",
		"jest": "29.7.0",
		"jest-environment-jsdom": "29.7.0",
		"jest-fetch-mock": "3.0.3",
		"mockdate": "3.0.5",
		"rollup": "4.25.0",
		"ts-jest": "29.2.3",
		"tslib": "2.6.2",
		"tsx": "4.19.0",
		"typescript": "5.5.2",
		"wcag-contrast": "3.0.0",
		"wireit": "0.14.8"
	},
	"peerDependencies": {
		"tslib": "^2.6.2",
		"typescript": "~5.5.2"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"wireit": {
		"build": {
			"command": "rollup -c",
			"files": [
				"src/**",
				"package.json",
				"tsconfig.json",
				"rollup.config.js",
				"../../../configs/rollup/rollup.config.js"
			],
			"output": [
				"dist"
			]
		},
		"e2e": {
			"command": "pnpm exec playwright install chromium && playwright test",
			"dependencies": [
				"../../../apps/github-pages:start"
			],
			"files": [
				"**",
				"!(dist|playwright-report|test-results)/**",
				"!.eslintcache",
				"!jest*",
				"!*.md"
			],
			"output": []
		},
		"e2e:ui": {
			"command": "pnpm exec playwright install chromium && playwright test --ui",
			"dependencies": [
				"../../../apps/github-pages:start"
			]
		},
		"fix": {
			"command": "eslint --cache --color . --fix",
			"dependencies": [
				"build"
			],
			"files": [
				"**",
				"!(dist)/**",
				"!.eslintcache"
			],
			"clean": false,
			"output": [
				"."
			]
		},
		"lint": {
			"command": "eslint --cache --color .",
			"dependencies": [
				"build"
			],
			"files": [
				"**",
				"!(dist)/**",
				"!.eslintcache"
			],
			"output": []
		},
		"sourcepoint-integration-test": {
			"command": "node --test sourcepoint-integration-tests/*.test.{js,mjs,cjs}",
			"dependencies": [
				"build"
			]
		},
		"test": {
			"command": "jest",
			"files": [
				"**",
				"../../../configs/jest.*",
				"!(dist)/**",
				"!.eslintcache"
			],
			"output": []
		},
		"tsc": {
			"command": "tsc --pretty",
			"dependencies": [
				"../identity-auth-frontend:build"
			],
			"files": [
				"**",
				"tsconfig.json",
				"../tsconfig/tsconfig.json",
				"../../../@types/**",
				"../../../tsconfig.base.json",
				"!(dist)/**",
				"!.eslintcache"
			],
			"output": []
		},
		"verify-dist": {
			"command": "jest -c=./jest.dist.config.js --setupFilesAfterEnv ./jest.dist.setup.js",
			"dependencies": [
				"build"
			],
			"files": [
				"**",
				"../../../configs/jest.*",
				"!(dist)/**",
				"!.eslintcache"
			],
			"output": []
		}
	}
}
