{
	"name": "@guardian/libs",
	"version": "16.1.0",
	"private": false,
	"description": "A collection of JavaScript libraries and TypeScript types for Guardian projects",
	"sideEffects": false,
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache ."
	},
	"devDependencies": {
		"@types/wcag-contrast": "3.0.3",
		"cypress": "13.7.1",
		"cypress-wait-until": "3.0.1",
		"eslint-plugin-cypress": "2.15.1",
		"jest-fetch-mock": "3.0.3",
		"mockdate": "3.0.5",
		"tslib": "2.6.2",
		"typescript": "5.3.3",
		"wcag-contrast": "3.0.0"
	},
	"peerDependencies": {
		"tslib": "^2.6.2",
		"typescript": "~5.3.3"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"entry": "libs/@guardian/libs/src/index.ts",
					"tsConfig": "libs/@guardian/libs/tsconfig.json",
					"packageJson": "libs/@guardian/libs/package.json",
					"outputPath": "dist/libs/@guardian/libs",
					"assets": [
						"libs/@guardian/libs/*.md"
					]
				}
			},
			"lint": {
				"inputs": [
					"{workspaceRoot}/libs/@guardian/libs/**/*",
					"{workspaceRoot}/.eslintrc.js"
				]
			},
			"fix": {
				"inputs": [
					"{workspaceRoot}/libs/@guardian/libs/**/*",
					"{workspaceRoot}/.eslintrc.js"
				],
				"outputs": [
					"{workspaceRoot}/libs/@guardian/libs/"
				]
			},
			"test": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/libs"
				],
				"options": {
					"jestConfig": "libs/@guardian/libs/jest.config.ts",
					"passWithNoTests": false
				}
			},
			"e2e": {
				"dependsOn": [
					"github-pages:build"
				],
				"executor": "@nx/cypress:cypress",
				"options": {
					"cypressConfig": "libs/@guardian/libs/cypress.config.js",
					"testingType": "e2e",
					"devServerTarget": "github-pages:serve:e2e"
				}
			},
			"verify-dist": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/libs"
				],
				"options": {
					"jestConfig": "libs/@guardian/libs/jest.dist.config.ts",
					"passWithNoTests": false,
					"setupFilesAfterEnv": [
						"./jest.dist.setup.js"
					]
				}
			},
			"dev": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/libs"
				],
				"options": {
					"jestConfig": "libs/@guardian/libs/jest.config.ts",
					"passWithNoTests": false,
					"watch": true
				}
			}
		}
	}
}
