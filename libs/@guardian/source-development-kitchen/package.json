{
	"name": "@guardian/source-development-kitchen",
	"version": "3.0.0",
	"sideEffects": false,
	"type": "module",
	"exports": {
		"./react-components": {
			"types": "./dist/react-components.d.ts",
			"import": "./dist/react-components.js",
			"require": "./dist/react-components.cjs"
		}
	},
	"files": [
		"dist",
		"react-components/package.json"
	],
	"scripts": {
		"build": "wireit",
		"build-storybook": "wireit",
		"dev": "jest --watch",
		"fix": "wireit",
		"lint": "wireit",
		"storybook": "storybook dev --port 4402",
		"test": "wireit",
		"tsc": "wireit",
		"verify-dist": "wireit"
	},
	"devDependencies": {
		"@babel/core": "7.24.0",
		"@emotion/react": "11.11.3",
		"@guardian/libs": "17.0.0",
		"@guardian/source": "4.0.0",
		"@storybook/manager-api": "8.1.8",
		"@storybook/react": "8.1.8",
		"@types/jest": "29.5.8",
		"@types/react": "18.2.11",
		"jest": "29.7.0",
		"react": "18.2.0",
		"rollup": "4.18.0",
		"storybook": "8.1.8",
		"ts-jest": "29.1.1",
		"tslib": "2.6.2",
		"typescript": "5.4.5",
		"wireit": "0.14.4"
	},
	"peerDependencies": {
		"@emotion/react": "^11.11.3",
		"@guardian/libs": "^17.0.0",
		"@guardian/source": "^4.0.0",
		"@types/react": "^18.2.11",
		"react": "^18.2.0",
		"tslib": "^2.6.2",
		"typescript": "~5.4.5"
	},
	"peerDependenciesMeta": {
		"@emotion/react": {
			"optional": true
		},
		"@types/react": {
			"optional": true
		},
		"react": {
			"optional": true
		},
		"typescript": {
			"optional": true
		}
	},
	"wireit": {
		"build": {
			"command": "rollup -c",
			"files": [
				"src/**",
				"package.json",
				"tsconfig.json",
				"rollup.config.js",
				"../../../configs/rollup/rollup.config.js"
			],
			"output": [
				"dist"
			]
		},
		"build-storybook": {
			"command": "NODE_ENV=production storybook build --webpack-stats-json",
			"dependencies": [
				"../source:build"
			],
			"files": [
				"**",
				"../../../configs/storybook/**",
				"!storybook-static/**",
				"!jest*",
				"!.eslintcache"
			],
			"output": [
				"storybook-static"
			]
		},
		"fix": {
			"command": "eslint --cache --color . --fix",
			"files": [
				"**",
				"../../../.eslint*",
				"!(dist|storybook-static)/**",
				"!.eslintcache"
			],
			"clean": false,
			"output": [
				"."
			]
		},
		"lint": {
			"command": "eslint --cache --color .",
			"files": [
				"**",
				"../../../.eslint*",
				"!(dist|storybook-static)/**",
				"!.eslintcache"
			],
			"output": []
		},
		"test": {
			"command": "jest",
			"files": [
				"**",
				"../../../configs/jest.*",
				"!(dist|storybook-static)/**",
				"!.eslintcache"
			],
			"output": []
		},
		"tsc": {
			"command": "tsc --pretty",
			"dependencies": [
				"../source:build"
			],
			"files": [
				"**",
				"tsconfig.json",
				"../tsconfig/tsconfig.json",
				"../../../@types/**",
				"../../../tsconfig.base.json",
				"!(dist|storybook-static)/**",
				"!.eslintcache"
			],
			"output": []
		},
		"verify-dist": {
			"command": "jest --setupFilesAfterEnv ./jest.dist.setup.js",
			"dependencies": [
				"build"
			],
			"files": [
				"**",
				"../../../configs/jest.*",
				"!(dist|storybook-static)/**",
				"!.eslintcache"
			],
			"output": []
		}
	}
}
