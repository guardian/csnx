{
	"name": "@guardian/source-development-kitchen",
	"version": "22.0.0",
	"sideEffects": false,
	"type": "module",
	"exports": {
		"./react-components": {
			"types": "./dist/react-components.d.ts",
			"import": "./dist/react-components.js",
			"require": "./dist/react-components.cjs"
		}
	},
	"files": [
		"dist",
		"react-components/package.json"
	],
	"scripts": {
		"build": "wireit",
		"build-storybook": "wireit",
		"dev": "jest --watch",
		"fix": "wireit",
		"lint": "wireit",
		"storybook": "storybook dev --port 4402",
		"test": "wireit",
		"tsc": "wireit",
		"verify-dist": "wireit"
	},
	"devDependencies": {
		"@emotion/react": "11.11.4",
		"@guardian/eslint-config": "workspace:*",
		"@guardian/libs": "26.0.1",
		"@guardian/source": "11.3.0",
		"@storybook/addon-a11y": "8.6.4",
		"@storybook/addon-essentials": "8.6.4",
		"@storybook/addon-interactions": "8.6.4",
		"@storybook/addon-links": "8.6.4",
		"@storybook/blocks": "8.6.4",
		"@storybook/react": "8.6.4",
		"@storybook/react-vite": "8.6.4",
		"@types/jest": "30.0.0",
		"@types/react": "18.2.79",
		"eslint": "9.19.0",
		"jest": "30.0.5",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"rollup": "4.50.1",
		"storybook": "8.6.4",
		"ts-jest": "29.4.0",
		"tslib": "2.6.2",
		"typescript": "5.5.2",
		"wireit": "0.14.12"
	},
	"peerDependencies": {
		"@emotion/react": "^11.11.4",
		"@guardian/libs": "^26.0.0",
		"@guardian/source": "^11.0.0",
		"@types/react": "^18.2.79",
		"react": "^18.2.0",
		"tslib": "^2.6.2",
		"typescript": "~5.5.2"
	},
	"peerDependenciesMeta": {
		"@emotion/react": {
			"optional": true
		},
		"@types/react": {
			"optional": true
		},
		"react": {
			"optional": true
		},
		"typescript": {
			"optional": true
		}
	},
	"wireit": {
		"__deps__": {
			"dependencies": [
				"../source:build"
			]
		},
		"build": {
			"command": "rollup -c",
			"dependencies": [
				"__deps__"
			],
			"files": [
				"src/**",
				"package.json",
				"tsconfig.json",
				"rollup.config.js",
				"../../../configs/rollup/rollup.config.js"
			],
			"output": [
				"dist"
			]
		},
		"build-storybook": {
			"command": "NODE_ENV=production storybook build --webpack-stats-json",
			"dependencies": [
				"__deps__"
			],
			"files": [
				"**",
				"!storybook-static/**",
				"!jest*",
				"!.eslintcache"
			],
			"output": [
				"storybook-static"
			]
		},
		"fix": {
			"command": "eslint --cache --color . --fix",
			"dependencies": [
				"__deps__"
			],
			"files": [
				"**",
				"!(dist|storybook-static)/**",
				"!.eslintcache"
			],
			"clean": false,
			"output": [
				"."
			]
		},
		"lint": {
			"command": "eslint --cache --color .",
			"dependencies": [
				"__deps__"
			],
			"files": [
				"**",
				"!(dist|storybook-static)/**",
				"!.eslintcache"
			],
			"output": []
		},
		"test": {
			"command": "jest",
			"dependencies": [
				"__deps__"
			],
			"files": [
				"**",
				"../../../configs/jest.*",
				"!(dist|storybook-static)/**",
				"!.eslintcache"
			],
			"output": []
		},
		"tsc": {
			"command": "tsc --pretty",
			"dependencies": [
				"__deps__"
			],
			"files": [
				"**",
				"tsconfig.json",
				"../tsconfig/tsconfig.json",
				"../../../@types/**",
				"../../../tsconfig.base.json",
				"!(dist|storybook-static)/**",
				"!.eslintcache"
			],
			"output": []
		},
		"verify-dist": {
			"command": "jest --setupFilesAfterEnv ./jest.dist.setup.js",
			"dependencies": [
				"build"
			],
			"files": [
				"**",
				"../../../configs/jest.*",
				"!(dist|storybook-static)/**",
				"!.eslintcache"
			],
			"output": []
		}
	}
}
