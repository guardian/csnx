{
	"extends": ["../../../.eslintrc.js"],
	"ignorePatterns": ["!**/*", "node_modules"],
	"overrides": [
		{
			"files": ["*.ts", "*.tsx"],
			"parserOptions": {
				"project": ["libs/@guardian/ab-core/tsconfig.json"]
			},
			"rules": {}
		},
		{
			"files": ["*.js", "*.jsx"],
			"rules": {}
		},
		{
			"files": ["*.test.*", "jest.*"],
			"env": {
				"jest": true
			},
			"rules": {
				"@typescript-eslint/no-unsafe-call": "off",
				"@typescript-eslint/no-unsafe-assignment": "off"
			}
		}
	]
}
