{
	"name": "@guardian/ab-core",
	"version": "7.0.1",
	"private": false,
	"description": "A client-side library for A/B & multivariate testing",
	"license": "Apache-2.0",
	"sideEffects": false,
	"scripts": {
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache ."
	},
	"devDependencies": {
		"tslib": "2.6.2",
		"typescript": "5.3.3"
	},
	"peerDependencies": {
		"tslib": "^2.6.2",
		"typescript": "~5.3.3"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"entry": "libs/@guardian/ab-core/src/index.ts",
					"tsConfig": "libs/@guardian/ab-core/tsconfig.json",
					"packageJson": "libs/@guardian/ab-core/package.json",
					"outputPath": "dist/libs/@guardian/ab-core",
					"assets": [
						"libs/@guardian/ab-core/*.md"
					]
				}
			},
			"lint": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				]
			},
			"fix": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				],
				"outputs": [
					"{projectRoot}"
				]
			},
			"test": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/ab-core"
				],
				"options": {
					"jestConfig": "libs/@guardian/ab-core/jest.config.ts",
					"passWithNoTests": true
				}
			},
			"verify-dist": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/ab-core"
				],
				"options": {
					"jestConfig": "libs/@guardian/ab-core/jest.config.ts",
					"passWithNoTests": false,
					"setupFilesAfterEnv": [
						"./jest.dist.setup.js"
					]
				}
			},
			"dev": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/ab-core"
				],
				"options": {
					"jestConfig": "libs/@guardian/ab-core/jest.config.ts",
					"passWithNoTests": false,
					"watch": true
				}
			}
		}
	}
}
