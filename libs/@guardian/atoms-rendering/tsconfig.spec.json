{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"outDir": "../../../dist/out-tsc",
		"module": "commonjs",
		"types": ["jest", "node"],
		"composite": true
	},
	"include": [
		"jest.config.ts",
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/*.test.tsx",
		"**/*.spec.tsx",
		"**/*.test.js",
		"**/*.spec.js",
		"**/*.test.jsx",
		"**/*.spec.jsx",
		"**/*.d.ts"
	]
}
