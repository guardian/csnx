{
	"name": "@guardian/source-react-components-development-kitchen",
	"version": "19.0.0",
	"sideEffects": false,
	"scripts": {
		"build-storybook": "wireit",
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache .",
		"storybook": "storybook dev --port 4403"
	},
	"devDependencies": {
		"@babel/core": "7.24.0",
		"@emotion/react": "11.11.1",
		"@guardian/libs": "16.0.0",
		"@guardian/source-foundations": "14.1.4",
		"@guardian/source-react-components": "22.0.1",
		"@types/react": "18.2.11",
		"react": "18.2.0",
		"tslib": "2.6.2",
		"typescript": "5.3.3",
		"wireit": "0.14.4"
	},
	"peerDependencies": {
		"@emotion/react": "^11.11.1",
		"@guardian/libs": "^16.0.0",
		"@guardian/source-foundations": "^14.1.4",
		"@guardian/source-react-components": "^22.0.1",
		"react": "^18.2.0",
		"tslib": "^2.6.2",
		"typescript": "~5.3.3"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"entry": "libs/@guardian/source-react-components-development-kitchen/src/index.ts",
					"tsConfig": "libs/@guardian/source-react-components-development-kitchen/tsconfig.json",
					"packageJson": "libs/@guardian/source-react-components-development-kitchen/package.json",
					"outputPath": "dist/libs/@guardian/source-react-components-development-kitchen",
					"assets": [
						"libs/@guardian/source-react-components-development-kitchen/*.md"
					]
				}
			},
			"lint": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				]
			},
			"fix": {
				"inputs": [
					"{projectRoot}/**",
					"{workspaceRoot}/.eslint*"
				],
				"outputs": [
					"{projectRoot}"
				]
			},
			"test": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/source-react-components-development-kitchen"
				],
				"options": {
					"jestConfig": "libs/@guardian/source-react-components-development-kitchen/jest.config.ts",
					"passWithNoTests": true
				}
			},
			"verify-dist": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/source-react-components-development-kitchen"
				],
				"options": {
					"jestConfig": "libs/@guardian/source-react-components-development-kitchen/jest.config.ts",
					"passWithNoTests": false,
					"setupFilesAfterEnv": [
						"./jest.dist.setup.ts"
					]
				}
			},
			"dev": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/source-react-components-development-kitchen"
				],
				"options": {
					"jestConfig": "libs/@guardian/source-react-components-development-kitchen/jest.config.ts",
					"passWithNoTests": false,
					"watch": true
				}
			}
		}
	},
	"wireit": {
		"build-storybook": {
			"command": "NODE_ENV=production storybook build --webpack-stats-json",
			"files": [
				"**/*.{ts,tsx,js,json,mdx,md}",
				"!storybook-static/**",
				"!jest*"
			],
			"output": [
				"storybook-static"
			]
		}
	}
}
