{
	"name": "@guardian/source-foundations",
	"version": "14.2.0",
	"license": "Apache-2.0",
	"sideEffects": false,
	"scripts": {
		"build-storybook": "wireit",
		"fix": "pnpm lint --fix",
		"lint": "eslint --cache .",
		"storybook": "storybook dev --port 4401"
	},
	"dependencies": {
		"mini-svg-data-uri": "1.4.4"
	},
	"devDependencies": {
		"@emotion/react": "11.11.1",
		"@guardian/design-tokens": "workspace:*",
		"lightningcss": "1.24.0",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"tslib": "2.6.2",
		"tsx": "4.7.1",
		"typescript": "5.3.3",
		"wireit": "0.14.4"
	},
	"peerDependencies": {
		"tslib": "^2.6.2",
		"typescript": "~5.3.3"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "@csnx/npm-package:build",
				"outputs": [
					"{options.outputPath}"
				],
				"options": {
					"entry": "libs/@guardian/source-foundations/src/index.ts",
					"tsConfig": "libs/@guardian/source-foundations/tsconfig.json",
					"packageJson": "libs/@guardian/source-foundations/package.json",
					"outputPath": "dist/libs/@guardian/source-foundations",
					"assets": [
						"libs/@guardian/source-foundations/*.md"
					]
				}
			},
			"lint": {
				"inputs": [
					"{workspaceRoot}/libs/@guardian/source-foundations/**/*",
					"{workspaceRoot}/.eslintrc.js"
				]
			},
			"fix": {
				"inputs": [
					"{workspaceRoot}/libs/@guardian/source-foundations/**/*",
					"{workspaceRoot}/.eslintrc.js"
				],
				"outputs": [
					"{workspaceRoot}/libs/@guardian/source-foundations/"
				]
			},
			"test": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/source-foundations"
				],
				"options": {
					"jestConfig": "libs/@guardian/source-foundations/jest.config.ts",
					"passWithNoTests": true
				}
			},
			"verify-dist": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/source-foundations"
				],
				"options": {
					"jestConfig": "libs/@guardian/source-foundations/jest.config.ts",
					"passWithNoTests": false,
					"setupFilesAfterEnv": [
						"./jest.dist.setup.ts"
					]
				}
			},
			"dev": {
				"executor": "@nx/jest:jest",
				"outputs": [
					"{workspaceRoot}/coverage/libs/@guardian/source-foundations"
				],
				"options": {
					"jestConfig": "libs/@guardian/source-foundations/jest.config.ts",
					"passWithNoTests": false,
					"watch": true
				}
			},
			"build-type-presets": {
				"executor": "nx:run-commands",
				"options": {
					"command": "tsx ./scripts/build-type-presets.ts",
					"cwd": "libs/@guardian/source-foundations",
					"color": true
				}
			}
		}
	},
	"wireit": {
		"build-storybook": {
			"command": "NODE_ENV=production storybook build --webpack-stats-json",
			"files": [
				"**/*.{ts,tsx,js,json,mdx,md}",
				"!storybook-static/**",
				"!jest*"
			],
			"output": [
				"storybook-static/**/*"
			]
		}
	}
}
