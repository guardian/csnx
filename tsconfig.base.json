{
	"extends": "./libs/tsconfig/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"declarationMap": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"lib": ["es2017", "dom"],
		"paths": {
			"@guardian/tsconfig": ["libs/tsconfig"],
			"@guardian/x": ["libs/x/src/index.ts"]
		},
		"resolveJsonModule": true,
		"rootDir": ".",
		"sourceMap": true
	},
	"exclude": ["node_modules", "tmp"]
}
