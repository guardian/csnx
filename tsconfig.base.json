{
	"extends": "./libs/tsconfig/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"declarationMap": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"lib": ["es2017", "dom"],
		"paths": {
			"@csnx/eslint": ["tools/plugins/eslint"],
			"@csnx/npm-package": ["tools/plugins/npm-package"],
			"@guardian/tsconfig": ["libs/tsconfig"]
		},
		"resolveJsonModule": true,
		"rootDir": ".",
		"sourceMap": true
	},
	"exclude": ["node_modules", "tmp"]
}
