{
	"extends": "./libs/@guardian/tsconfig/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"declaration": true,
		"declarationMap": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@emotion/react",
		"noEmit": true,
		"rootDir": ".",
		"sourceMap": true,
		"moduleResolution": "bundler"
	},
	"exclude": ["node_modules", "tmp"],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
