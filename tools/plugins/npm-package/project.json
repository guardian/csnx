{
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "tools/plugins/npm-package",
	"projectType": "library",
	"targets": {
		"lint": {
			"executor": "@csnx/eslint:check",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["tools/plugins/npm-package/**/*.{js,ts}"]
			}
		},
		"fix": {
			"executor": "@csnx/eslint:fix",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["tools/plugins/npm-package/**/*.{js,ts}"]
			}
		}
	},
	"tags": ["scope:tool"]
}
