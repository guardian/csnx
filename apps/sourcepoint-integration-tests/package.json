{
	"name": "sourcepoint-integration-tests",
	"private": true,
	"type": "module",
	"scripts": {
		"fix": "wireit",
		"lint": "wireit",
		"test": "wireit"
	},
	"dependencies": {
		"@guardian/libs": "workspace:*"
	},
	"devDependencies": {
		"wireit": "0.14.4"
	},
	"wireit": {
		"__deps__": {
			"dependencies": [
				"../../libs/@guardian/libs:build"
			]
		},
		"fix": {
			"command": "eslint --cache --color . --fix",
			"dependencies": [
				"__deps__"
			],
			"clean": false,
			"files": [
				"**",
				"../../.eslint*",
				"!.eslintcache"
			],
			"output": [
				"."
			]
		},
		"lint": {
			"command": "eslint --cache --color .",
			"dependencies": [
				"__deps__"
			],
			"files": [
				"**",
				"../../.eslint*",
				"!.eslintcache"
			],
			"output": []
		},
		"test": {
			"command": "node --test --test-reporter spec",
			"dependencies": [
				"__deps__"
			]
		}
	}
}
