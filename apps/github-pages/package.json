{
	"name": "github-pages",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "wireit",
		"dev": "wireit",
		"start": "wireit"
	},
	"devDependencies": {
		"@astrojs/check": "0.7.0",
		"@astrojs/svelte": "5.4.0",
		"@guardian/libs": "workspace:*",
		"astro": "4.9.0",
		"svelte": "4.2.12",
		"typescript": "5.3.3",
		"wireit": "0.14.4"
	},
	"wireit": {
		"build": {
			"command": "astro check && astro build",
			"files": [
				"!(dist)/**"
			],
			"output": [
				"dist"
			],
			"dependencies": [
				"../../libs/@guardian/libs:build"
			]
		},
		"dev": {
			"command": "astro dev",
			"service": {
				"readyWhen": {
					"lineMatches": "use --host to expose"
				}
			},
			"dependencies": [
				"../../libs/@guardian/libs:build"
			]
		},
		"start": {
			"dependencies": [
				"build"
			],
			"command": "astro preview",
			"service": {
				"readyWhen": {
					"lineMatches": "use --host to expose"
				}
			},
			"files": [
				"dist/**"
			]
		}
	}
}
