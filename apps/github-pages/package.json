{
	"name": "github-pages",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "astro check && astro build",
		"dev": "astro dev"
	},
	"devDependencies": {
		"@astrojs/check": "0.5.6",
		"@astrojs/svelte": "5.3.0",
		"astro": "4.5.16",
		"svelte": "4.2.12",
		"typescript": "5.3.3"
	},
	"nx": {
		"targets": {
			"build": {
				"outputs": [
					"{workspaceRoot}/dist/apps/github-pages"
				],
				"inputs": [
					"{workspaceRoot}/apps/github-pages/**/*"
				]
			},
			"serve:e2e": {
				"executor": "nx:run-commands",
				"options": {
					"description": "Run server for e2e testing with cypress. Exits when finished (see readyWhen option).",
					"command": "astro preview",
					"cwd": "{workspaceRoot}/apps/github-pages",
					"color": true,
					"readyWhen": "use --host to expose"
				}
			}
		}
	}
}
